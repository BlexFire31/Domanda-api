  "version": "0.2.0",
  "configurations": [
    {
      "name": "Domanda Api",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "autoReload": {
        "enable": true
      },
      "env": {
        "FLASK_APP": "main.py",
        "FLASK_ENV": "deployment",
        "FLASK_DEBUG": "1"
      },
      "args": ["run", "--no-debugger", "--port", "7000"],
      "jinja": true
    }
  ]
}
